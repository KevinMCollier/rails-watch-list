<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_path("theater.jpg") %>');">
  <div class="container">
    <h1 class="text-center">Simplify Your Next Movie Night</h1>
    <p class="text-center">Create watch lists with your favorite movies ðŸŽ¬</p>
  </div>
</div>

<div class="container">
  <h3 class="my-3">My Lists</h3>
  <div class="row justify-content-center">
    <% @lists.each do |list| %>
      <div class="col-md-4 col-12">
        <% if list.photo.attached? %>
          <div class="card m-4">
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, crop: :fill %>')">
            <h3><strong><%= list.name %></strong></h3>
            <%= link_to '', list_path(list), class: "card-link" %>
            </div>
          </div>
        <% end %>
        </div>
    <% end %>
  </div>
</div>
