<div class="container">
  <h3 class="my-3">My Lists</h3>
  <div class="row justify-content-center">
    <% @lists.each do |list| %>
      <div class="col-md-4 col-12">
        <div class="card m-4">
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= list.image_url %>')">
            <%= link_to list.name, list_path(list), class: "white-fade-link" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
